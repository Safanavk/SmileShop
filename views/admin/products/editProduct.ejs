<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
        <li class="breadcrumb-item "><a href="/admin/category">Products</a></li>
        <li class="breadcrumb-item active" aria-current="page"> Edit Products</li>
    </ol>
</nav>

<section class="new-product">
    <form id="addProductForm" class="container m-3 border" action="/admin/editProduct/<%= product._id %>" method="post"
        enctype="multipart/form-data">
        <legend class="text-center fw-bold">Edit Products - <%= product.name %>
        </legend>
        <div class="my-2 row g-2 container justify-content-evenly">
            <div class="card col-md-4 pd-0 ">
                <fieldset class="card-body align-items-center">
                    <legend>Edit Product Image</legend>
                    <div class="card col-md-12 ">
                        <div class="card-body">
                            <div class="form-group mb-3">
                                <label for="productName" class="form-label">Primary Image</label>
                                <div class="card">
                                    <img src="/uploads/product-images/crp/<%= product?.primaryImages[0]?.name %>" alt="">
                                    <% if (product?.primaryImages[0]?.name!=="" ) { %>
                                        <button class="btn btn-sm btn-danger" type="button"
                                            onclick="deleteImage('<%- product?.primaryImages[0]?.name%>','<%- product._id%>')"><i
                                                class="bi bi-trash"></i>delete</button>
                                        <% } %>

                                </div>
                                <div class="input-group mb-3">
                                    <input type="file" class="form-control" name="primaryImage" id="inputGroupFile02">
                                </div>
                            </div>
                        </div>
                        <div class="card col-md-12 ">
                            <div class="card-body">
                                <div class="form-group mb-3">
                                    <label for="productName" class="form-label">Secondary Image</label>
                                    <div class="card">
                                        <img src="/uploads/product-images/crp/<%= product?.secondaryImages[0]?.name %>"
                                            alt="">
                                        <button class="btn btn-sm btn-danger" type="button"
                                            onclick="deleteImage('<%- product?.secondaryImages[0]?.name%>','<%- product._id%>')"><i
                                                class="bi bi-trash"></i>delete</button>

                                    </div>
                                    <div class="input-group mb-3">
                                        <input type="file" class="form-control" name="secondaryImages1"
                                            id="inputGroupFile02">
                                    </div>
                                </div>
                            </div>
                            <div class="card col-md-12 ">
                                <div class="card-body">
                                    <div class="form-group mb-3">
                                        <div class="card">
                                            <img src="/uploads/product-images/crp/<%= product?.secondaryImages[1]?.name %>"
                                                alt="">
                                            <button class="btn btn-sm btn-danger" type="button"
                                                onclick="deleteImage('<%- product?.secondaryImages[1]?.name %>','<%- product._id%>') "><i
                                                    class="bi bi-trash"></i>delete</button>
                                        </div>
                                        <div class="input-group mb-3">
                                            <input type="file" class="form-control" name="secondaryImages2"
                                                id="inputGroupFile02">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card col-md-12 ">
                                <div class="card-body">
                                    <div class="form-group mb-3">
                                        <div class="card">
                                            <img src="/uploads/product-images/crp/<%= product?.secondaryImages[2]?.name %>"
                                                alt="">
                                            <button class="btn btn-sm btn-danger" type="button"
                                                onclick="deleteImage('<%- product?.secondaryImages[2]?.name %>','<%- product._id%>') "><i
                                                    class="bi bi-trash"></i>delete</button>
                                        </div>
                                        <div class="input-group mb-3">
                                            <input type="file" class="form-control" name="secondaryImages3"
                                                id="inputGroupFile03">
                                        </div>
                                    </div>
                                </div>
                            </div>


                </fieldset>
            </div>
            <div class="card col-md-7 ">
                <div class="card-body">
                    <legend>Product Details</legend>
                    <div class="form-group mb-3">
                        <label for="productName" class="form-label">Product Name</label>
                        <input type="text" name="productName" class="form-control" id="productName"
                            value="<%= product.name %>">
                    </div>
                    <div class="form-group mb-3">
                        <label for="status" class="form-label">Status</label>
                        <select name="status" id="status" class="form-select">
                            <% if (!product.isDeleted) { %>
                                <option value="false">listed</option>
                                <option value="true">Unlisted</option>
                                <% } else { %>
                                    <option value="true">Unlisted</option>
                                    <option value="false">Listed</option>
                                    <% }%>
                        </select>
                    </div>
                    <div class="form-group mb-3">
                        <label for="categoryName" class="form-label">Category Name</label>
                        <select name="categoryName" id="categoryName" class="form-select">
                            <option value="<%- product.category._id %>">
                                <%= product.category.name %>
                            </option>
                            <% categories.forEach(category=> { %>
                                <% if (category.name !==product.category.name) { %>
                                    <option value="<%= category._id %>">
                                        <%= category.name %>
                                    </option>
                                    <% } %>

                                        <% }) %>
                        </select>
                    </div>
                    <div class="form-group mb-3">
                        <label for="productStock" class="form-label">Edit Stock</label>
                        <input type="number" name="productStock" class="form-control" id="productStock"
                            value="<%= product.stock %>">
                    </div>
                    <div class="form-group mb-3">
                        <label for="productDespt" class="form-label">Product Description</label>
                        <textarea name="productDespt" id="productDespt" class="form-control" cols="30"
                            rows="5"><%- product.description %> </textarea>

                    </div>
                    <div class="form-group mb-3">
                        <label for="productDetails" class="form-label"> Product Additional Details</label>
                        <textarea name="productDetails" id="productDetails" cols="30" rows="5"
                            class="form-control"><%- product.details %></textarea>


                    </div>
                    <div class="rows">
                        <div class="form-group mb-3 col">
                            <label for="price" class="form-label">Price</label>
                            <input type="number" name="price" id="price" class="form-control"
                                value="<%= product.price %>">
                        </div>
                    </div>
                </div>


            </div>
            <div class="d-flex justify-content-evenly my-4">
                <button type="submit" class="btn  btn-outline-primary"> Submit</button>
            </div>
        </div>

    </form>
</section>
<script defer>
    const deleteImage = async (imageId, productId) => {

        const body = {
            productId: productId,
            imageId: imageId
        }
        try {
            const result = await Swal.fire({
                title: "Are you sure ?",
                text: "you won't be able to recover this",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'

            })
            if (result.isConfirmed) {
                const response = await fetch('/admin/deleteImage', {
                    method: "delete",
                    headers: { "Content-Type": "Application/json" },
                    body: JSON.stringify(body)
                })
                if (!response.ok) {
                    throw new Error(`Failed to delete image :${response.statusText}`)
                }
                let data = await response.json()
                if (data.success) {
                    Swal.fire({
                        icon: "success",
                        title: "Success",
                        text: data.message
                    })
                } else {
                    throw new Error(data.message)

                }

            }

        } catch (error) {
            console.error(error)
            Swal.fire({
                icon: "error",
                title: "Error",
                text: error.message
            })
        }
    }

</script>