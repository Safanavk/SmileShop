<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/admin">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">Products</li>
  </ol>
</nav>

<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Products</h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <a href="/admin/addProduct" class="btn btn-sm btn-outline-primary">+ Add Products</a>
    </div>
  </div>
</div>
<div class="container">



</div>
<table class="table text-capitalize">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">image</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Status</th>
      <th scope="col">list/Unlist</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if (product && product.length> 0) { %>
      <% product.forEach((product,index)=> { %>
        <tr class="align-middle">
          <td>
            <%= index +1 %>
          </td>
          <td class="justify-content-center">
            <img class="img-fluid img-thumbnail"
              src="/uploads/product-images/crp/<%- product.primaryImages[0] ? product.primaryImages[0].name : product.secondaryImages[0].name %>"
               width="70rem" alt="">
          </td>
          <td>
            <%= product.name %>
          </td>
          <td>
            <%= product.category.name %>
          </td>
          <td>
            <% if (!product.isDeleted) { %>
              <span class="badge rounded-pill bg-success">listed</span>
              <% } else { %>
                <span class="badge rounded-pill bg-danger">Unlisted</span>
                <% } %>
          </td>
          <td class="text-center">
            <div class="d-flex flex-row justify-content-center">
              <% if (product.isDeleted) { %>
              <button onclick="toggleListing('<%- product._id %>','<%- product.isDeleted %>' ,'<%- product.name %>')" class="btn btn-danger btn-sm">
                <i class="bi bi-slash-circle-fill"></i> Unlist
              </button>
              <% } else { %>
              <button onclick="toggleListing('<%- product._id %>','<%- product.isDeleted %>' ,'<%- product.name %>')" class="btn btn-success btn-sm">
                <i class="bi bi-check-circle-fill"></i> List
              </button>
              <% } %>
            </div>
          </td>
          <td>
            <a href="/admin/editProduct/<%= product._id %>" class="btn btn-sm btn-warning">Edit</a>
          </td>
        </tr>

        <% }) %>
          <% } else { %>
            <tr>
              <td colspan="6" class="text-center">No products found</td>
            </tr>

            <% } %>

  </tbody>
</table>